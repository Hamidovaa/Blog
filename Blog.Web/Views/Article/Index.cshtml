@model List<ArticleViewModel>

<div class="container flex-grow-1 container-p-y">
    <h1>Pending Approval Articles</h1>
    <a class="btn btn-success mb-3" asp-controller="Article" asp-action="Add">
        Create Article <i class="bx bx-plus"></i>
    </a>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model)
            {
                <tr id="article-@article.Id">
                    <td>@article.Title</td>
                    <td>@article.Category.Name</td>
                    <td>
                        @if (article.Status == Blog.Entity.Entities.ArticleStatus.PendingApproval)
                        {
                            <span class="badge bg-warning" style="width:150px; padding:13px">Pending Approval</span>
                        }
                        else if (article.Status == Blog.Entity.Entities.ArticleStatus.Approved)
                        {
                            <span class="badge bg-success" style="width:150px; padding:15px">Approved</span>
                        }
                        else if (article.Status == Blog.Entity.Entities.ArticleStatus.Rejected)
                        {
                            <span class="badge bg-danger" style="width:150px; padding:15px">Rejected</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" data-id="@article.Id" asp-controller="Article" asp-action="Update" asp-route-articleId="@article.Id"><i class="bx bxs-edit"></i></a>
                        <a class="badge bg-danger delete-article" data-id="@article.Id"><i class="bx bx-minus-circle"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.delete-article').on('click', function (e) {
                e.preventDefault();
                var articleId = $(this).data('id');
                var row = $('#article-' + articleId);

                $.ajax({
                    url: '/Article/Delete',
                    type: 'POST',
                    data: { articleId: articleId },
                    success: function (result) {
                        if (result.success) {
                            row.remove();
                        } else {
                            alert('Failed to delete article.');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Failed to delete article:', error);
                    }
                });
            });
        });
    </script>
}
