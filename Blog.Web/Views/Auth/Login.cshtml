

@model UserLoginViewModel


<container>
    <row>
        <div class="container col-sm-6 col-md-6 col-lg-4" style="width:50%; margin:auto; padding:10px 30px;   margin-top:50px; border:2px solid #008080; border-radius:20px">
            <div class="row">
                <h2 style="margin:auto; color:#008080; padding-bottom:30px">Log In</h2>
            </div>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" type="checkbox" />
                </div>
                <p style="text-align:center">Don't have an account? <a style="color:#008080" asp-controller="Auth" asp-action="Register">Register Here</a></p>
                <div style="text-align:center">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </row>
</container>