@model List<ArticleViewModel>


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Articles Management /</span> Articles</h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header">Table Basic</h5>
        <div class="table-responsive text-nowrap">
            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Article" asp-action="Add">
                Create Article <i class="bx bx-plus"></i>
            </a>
           
            <table class="table table-bordered" id="articleTables" width="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>Header</th>
                        <th>Category</th>
                        <th>Created Date</th>
                        <th>Create By</th>
                        <th>Status</th>
                        <th>Transactions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Header</th>
                        <th>Category</th>
                        <th>Created Date</th>
                        <th>Create By</th>
                        <th>Status</th>
                        <th>Transactions</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var article in Model)
                    {
                        <tr name="@article.Id">
                            <td>@article.Title</td>
                            <td>@article.Category</td>
                            <td>@article.CreateDate.ToShortDateString()</td>
                            <td>@article.CreatedBy</td>
                            <td>@(article.IsDeleted ? "Not Active" : "Active")</td>
                            
                            <td>
                                <a class="badge bg-danger" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-articleId="@article.Id"><i class="bx bx-minus-circle"></i></a>

                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->



</div>

@section Scripts {
    <script src="~/js/articleindex.js" type="application/ecmascript"></script>
}

